# VIBE CLI Environment Configuration
# Copy to .env and fill in your values

# ============================================
# API KEYS (at least one required)
# ============================================
OPENROUTER_API_KEY=
MEGALLM_API_KEY=
AGENTROUTER_API_KEY=
ROUTEWAY_API_KEY=

# ============================================
# PROVIDER SETTINGS
# ============================================
# Default provider: openrouter | megallm | agentrouter | routeway
VIBE_PROVIDER=megallm

# Default model (provider-specific)
VIBE_MODEL=qwen/qwen3-next-80b-a3b-instruct

# ============================================
# EXECUTION SETTINGS
# ============================================
# Request timeout in milliseconds
VIBE_TIMEOUT=60000

# Max retry attempts on failure
VIBE_MAX_RETRIES=3

# Max concurrent requests
VIBE_MAX_CONCURRENT=5

# Rate limit (requests per minute)
VIBE_RATE_LIMIT=60

# ============================================
# SECURITY SETTINGS
# ============================================
# Dry-run mode (blocks all write operations)
VIBE_DRY_RUN=false

# Enable audit logging
VIBE_AUDIT=true

# ============================================
# OBSERVABILITY
# ============================================
# Enable debug logging
VIBE_DEBUG=false

# Log level: debug | info | warn | error
VIBE_LOG_LEVEL=info

# Enable telemetry (anonymous usage stats)
VIBE_TELEMETRY=true

# ============================================
# CI/CD DETECTION (auto-detected)
# ============================================
# CI=true
# GITHUB_ACTIONS=true
# NODE_ENV=production
